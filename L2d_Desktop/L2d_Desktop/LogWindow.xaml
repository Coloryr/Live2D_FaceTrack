<Window x:Class="L2d_Desktop.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L2d_Desktop"
        mc:Ignorable="d"
        Title="LogWindow" MinHeight="200" MinWidth="300" Height="200" Width="300" Closing="Window_Closing">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" Stroke="#FF5ABED6" StrokeThickness="2"/>
        <TextBox TextWrapping="Wrap" Text="" VerticalScrollBarVisibility="Visible" Margin="2" Name="Log"
                 IsReadOnly="True"/>
        <Button Content="清理" Margin="0,10,24,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="46" Height="24" Click="Button_Click"/>
    </Grid>
</Window>
