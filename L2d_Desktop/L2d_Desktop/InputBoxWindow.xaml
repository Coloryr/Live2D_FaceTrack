<Window
    x:Class="L2d_Desktop.InputBoxWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:L2d_Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="InputBoxWindow"
    Width="447"
    Height="86"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Text="{Binding ElementName=Slider1, Path=Value, StringFormat=透明度 : {0:0.00}, FallbackValue='透明度 :'}" />
            <Slider
                x:Name="Slider1"
                Margin="5,5,5,0"
                Maximum="1"
                Minimum="0"
                TickFrequency="0.01"
                TickPlacement="None" />
        </StackPanel>
    </Grid>
</Window>
